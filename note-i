add animation  */
.one-center::before, .one-center::after{
  /* make sure bakground overlapp the image */
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
 /* change the position, bcz one-center was reletive */
 position: absolute;

 /* background: gray; */
 /* fix the size of gray background */
 height: 100%;
 width: 60%;
 margin: auto;
 /* be empty form everything */
 content: "";
}

.one-center::before{
 content: "\f04b";
 font-family: "font Awesome 5 Free";
 font-weight: 900;
 /* light gold */
 background: gold;
 display: grid;
 place-items: center;
 z-index: 10;
}

.one-center::after{
 background: white;
 /* be infront */
 z-index: 1;
 /* add animation for pulse for too slow minisecond, add infinit to keep playing */
 animation: pulse 500ms infinite;
 }

 @keyframes pulse{
   0%{
     transform: scale(1);
   }

   100%{
     transform: scale(1.1);
   }
 }



